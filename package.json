{
  "name": "vscode-attrs-sorter",
  "displayName": "Sorting HTML and Jade attributes",
  "description": "Sorting of the tag attributes in the specified order",
  "version": "1.3.1",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.3.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-attrs-sorter/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-attrs-sorter"
  },
  "keywords": [
    "html",
    "jade",
    "pug",
    "attributes",
    "sort"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:attrsSorter.processEditor"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [{
      "command": "attrsSorter.processEditor",
      "title": "Sorting of the tag attributes (attrs-sorter)"
    }],
    "configuration": {
      "type": "object",
      "title": "AttrsSorter configuration",
      "properties": {
        "attrsSorter.order": {
          "type": "array",
          "default": [],
          "description": "An array of attributes in the correct order"
        }
      }
    }
  },
  "dependencies": {
    "posthtml": "0.9.0",
    "posthtml-attrs-sorter": "0.1.3",
    "pug-lexer": "2.3.0"
  },
  "devDependencies": {
    "mocha": "^3.0.2",
    "vscode": "^0.11.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "test": "xo && mocha"
  },
  "xo": {
    "rules": {
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "space-before-function-paren": [2, "never"],
      "babel/arrow-parens": [2, "always"],
      "babel/object-curly-spacing": [2, "always"],
      "babel/generator-star-spacing": [2, "after"]
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
